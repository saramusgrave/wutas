    New Water Order
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(s => s.CustomerID)

        <div>
            @Html.Label("Structure:")
            @*@Html.DropDownList("Position", new SelectList(Enum.GetValues(typeof(SelectPosition))), "Position")*@
            @Html.TextBoxFor(s => s.Structure, new { @type = "string" })
            @Html.ValidationMessageFor(s => s.Structure)
        </div>
        <div>
            @Html.Label("Requested CFS:")
            @Html.TextBoxFor(s => s.CustomerCFS_1)
            @Html.ValidationMessageFor(s => s.CustomerCFS_1)
        </div>
        <div>
            @Html.Label("Start Date")
            @Html.TextBoxFor(s => s.TimeStampCustomer1, new { @type = "Date" })
            @Html.ValidationMessageFor(s => s.TimeStampCustomer1)
        </div>
        <div>
            @Html.Label("End Date")
            @Html.TextBoxFor(s => s.CustomerDate1, new { @type = "Date" })
            @Html.ValidationMessageFor(s => s.CustomerDate1)
        </div>
        <div>
            @Html.Label("Comments")
            @Html.TextBoxFor(s => s.CustomerComments_1, new { @type = "string" })
            @Html.ValidationMessageFor(s => s.CustomerComments_1)
        </div>
        <div>
            <button type="Submit">Add</button>
        </div>
    }
</body>
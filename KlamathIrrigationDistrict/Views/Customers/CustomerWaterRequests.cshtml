<body>
    <div style="overflow-x: auto;">
        <!--Add Request class=Contacts-->
        <table class="Contacts">
            <caption>Add Request</caption>
            <tr>
                <th>Structure</th>
                <th>Date</th>
                <th>CFS</th>
                <th colspan="2">Comments</th>
            </tr>
            <tr>
                <td>
                    <input list="CustomersStructures" placeholder="Structure">
                    @* allow for drop down list options to choose from *@
                    <datalist id="CustomersStructures">
                        <option value="T4378"></option>
                        <option value="T58392"></option>
                    </datalist>
                </td>
                <td>
                    @*<input type="date" value="2017-08-12">*@
                    <input type="date" value="TODAY()" />
                </td>
                <td>
                    <input type="CFS" value="0">
                </td>
                <td>
                    <input type="Comments" placeholder="Comments...">
                </td>
                <td>
                    @*<button>Submit Request</button>*@
                    @Html.ActionLink("Submit Request", "ApplyWaterRequest", new { @RequestID = Model.RequestID })
                </td>
            </tr>
        </table>
    </div>
</body>
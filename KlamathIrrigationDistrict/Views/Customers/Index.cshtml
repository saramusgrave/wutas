@using KlamathIrrigationDistrict.DataLayer.DataModels
@using PagedList.Mvc;
@model PagedList.IPagedList<Customers>
@*@model List<Customers>*@
@{
    ViewBag.Title = "KID Staff: View Customers";
}
<head>
    <title>KID: Office Staff</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Styles/OfficeStaff.css" />
    <script src="~/Scripts/KIDDitchRidersJS.js"></script>
</head>
<!--Log in Name, Customers, Ditch Riders, Log Out id=OfficeStaffMenu-->
<header id="OfficeStaffMenu">
    <ul>
        <li><label class="FirstLast">Linda.Seater</label></li>
        <li><a href="Index" id="active">Customers</a></li>
        <li><a href="/OfficeStaff/Index">Staff</a></li>
        <li><a href="/MapTaxLot/Index">MapTaxLots</a></li>
        <li><a href="~/Account/Login" class="LogOutBtn">Log Out</a></li>
    </ul>
</header>
<body>
    <a href="AddCustomer" class="next">Add &raquo;</a>
    <table class="OfficeStaffCustomers">
        <caption>Customers</caption>
        <tr>
            <th>Customer ID</th>
            <th>Tracking ID</th>
            <th>Name</th>
            <th>Address 1</th>
            <th>Address 2</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Total Allotment</th>
            <th colspan="2">History & Edit</th>
        </tr>
        @*Creates table for infinit customers*@
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].CustomerID</td>
                <td>@Model[i].TrackingID</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Address1</td>
                <td>@Model[i].Address2</td>
                <td>@Model[i].City</td>
                <td>@Model[i].State</td>
                <td>@Model[i].Zip</td>
                <td>@Model[i].TotalAllotment</td>
                <td>@Html.ActionLink("Edit", "StaffEditCustomer", new { @CustomerID = Model[i].CustomerID })</td>
            </tr>
        }
    </table>
    <div class="pagination" style="margin-left: 20px;">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
    <br />
</body>

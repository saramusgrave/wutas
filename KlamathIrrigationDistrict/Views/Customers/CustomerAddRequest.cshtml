@using KlamathIrrigationDistrict.DataLayer.DataModels
@model Customers
@{
    ViewBag.Title = "Customer: Add Request";
    Layout = "~/Views/Shared/CustomerMenu.cshtml";
}
<head>
    <title>Customers: Add Request</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Styles/Customers.css" />
    <script src="~/Scripts/KIDDitchRidersJS.js"></script>
</head>

<body>

    @using (@Html.BeginForm())
    {
        <div style="overflow-x: auto;">
            <table class="Contacts">
                <caption>Add Request</caption>
                <tr>
                    <th>@Html.Label("Request Date")</th>
                    <th>@Html.Label("CustomerID")</th>
                    <th>@Html.Label("Name")</th>
                    <th>@Html.Label("Structure")</th>
                    <th>@Html.Label("Detail")</th>
                    <th>@Html.Label("CFS Requesting")</th>
                    <th>@Html.Label("Comments")</th>
                </tr>
                <tr>

                    @Html.HiddenFor(m => m.RequestID)
                    <td>@Html.TextBoxFor(m => m.CustomerDate1, new { @type = "date", @placeholder = "GETDATE()" })</td>
                    <td>@Html.TextBoxFor(m => m.CustomerID, new { @Value = Model.CustomerID, @readonly = "" })</td>
                    <td>@Html.TextBoxFor(m => m.Name, new { @Value = Model.Name, @readonly = "" })</td>
                    <td>@Html.DropDownListFor(m => m.Structure, ViewData["Structure"] as IEnumerable<SelectListItem>)</td>
                    <td>@Html.TextBoxFor(m => m.StructureComment)</td>
                    <td>@Html.TextBoxFor(m => m.CustomerCFS_1, new { @type = "number" })</td>
                    <td>@Html.TextBoxFor(m => m.CustomerComments_1, new { @type = "Comments" })</td>

                </tr>
            </table>
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    }
</body>
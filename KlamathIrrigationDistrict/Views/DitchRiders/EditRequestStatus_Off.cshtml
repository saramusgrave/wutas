@using KlamathIrrigationDistrict.DataLayer.DataModels
@model DitchRiderRequests
@{
    ViewBag.Title = "KID: Pending Off";
    Layout = "~/Views/Shared/DitchRidersMenue.cshtml";
}
<a href="@Url.Action("Appending_Off", "DitchRiders")/@Url.RequestContext.RouteData.Values["id"]" class="previous"><br />&laquo;Pending Off</a>
@using (Html.BeginForm())
{
    @Html.HiddenFor(s => s.RequestID)
    @Html.HiddenFor(s => s.TimeStampStaff2, new { @Value = DateTime.Now })
    @Html.HiddenFor(s => s.Staff2, new { @Value = User.Identity.Name })

    <table class="ActiveRequests">
        <caption>Approve Request for Water Off</caption>
        <tr>
            <th>@Html.Label("Name")</th>
            <th>@Html.Label("Date")</th>
            <th>@Html.Label("CFS")</th>
            <th>@Html.Label("Turnout")</th>
            <th>@Html.Label("Comments")</th>
            <th>@Html.Label("Status")</th>
        </tr>
        <tr>
            <td>@Html.DisplayTextFor(s => s.CustomerName)</td>
            <td>@Html.DisplayTextFor(s => s.CustomerDate2)</td>
            <td>@Html.DisplayTextFor(s => s.CustomerCFS1)</td>
            <td>@Html.DisplayTextFor(s => s.Structure)</td>
            <td>@Html.DisplayTextFor(s => s.CustomerComments2)</td>
            <td>@Html.DisplayTextFor(s => s.RequestStatus1)</td>
        </tr>
        <tr>
            <td>@User.Identity.Name</td>
            <td>@Html.TextBoxFor(s => s.StaffDate2, new { @type = "datetime-local", @Value = Model._Getdate.Date.ToString("yyyy-MM-ddThh:mm") })</td>
            <td colspan="2"></td>
            <td>
                @Html.DropDownListFor(s => s.StaffComments2, ViewData["Comments"] as IEnumerable<SelectListItem>, new { @ID = "Comments"})@Html.TextAreaFor(s => s.StaffComments1, new { @Id = "Sub", @hidden = "hidden" })
            </td>
            <td>@Html.DropDownListFor(s => s.RequestStatus2, ViewData["Status"] as IEnumerable<SelectListItem>)</td>
        </tr>
    </table>
    <div>
        <button type="submit">Submit</button>
    </div>
}
@Html.Partial("_CanalWater")
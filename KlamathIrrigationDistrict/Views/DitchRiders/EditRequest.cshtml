    Update Request
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(s => s.RequestID)
        @Html.HiddenFor(s => s.CustomerID)
        @Html.HiddenFor(s => s.TrackingID)
        @Html.HiddenFor(s => s.MapTaxLot)

        <div>
            @Html.Label("Customer Name: ")
            @Html.DisplayTextFor(s => s.CustomerName)
        </div>
        <div>
            @Html.Label("Allotment: ")
            @Html.DisplayTextFor(s => s.Allotment)
        </div>
        <div>
            @Html.Label("Structure: ")
            @Html.DisplayTextFor(s => s.Structure)
        </div>
        <div>
            @Html.Label("Customer Date: ")
            @Html.DisplayTextFor(s => s.CustomerDate)
        </div>
        <div>
            @Html.Label("CFS Requested: ")
            @Html.DisplayTextFor(s => s.CFSRequested)
        </div>
        <div>
            @Html.Label("Customer Comments: ")
            @Html.DisplayTextFor(s => s.CustomerComments)
        </div>
        <div>
            @Html.Label("Ditch Rider Date: ")
            @Html.TextBoxFor(s => s.DitchRiderDate, new { @type = "datetime", @Value = DateTime.Now.ToString(), @disabled = "disabled" })
        </div>
        <div>
            @Html.Label("CFS Given: ")
            @Html.TextBoxFor(s => s.CFSGiven, new { @type = "number" })
        </div>
        <div>
            @Html.Label("Ditch Rider Comments: ")
            @Html.TextAreaFor(s => s.DitchRiderComments)
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    }

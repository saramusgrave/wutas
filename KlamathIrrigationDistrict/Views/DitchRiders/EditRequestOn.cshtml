@using KlamathIrrigationDistrict.DataLayer.DataModels
@model DitchRiderRequests
@{
    ViewBag.Title = "KID D.R.: Turn On Water";
    Layout = "~/Views/Shared/DitchRidersMenue.cshtml";
}
<body>
    <a href="@Url.Action("_ActiveRequestsOn", "DitchRiders")/@Url.RequestContext.RouteData.Values["id"]" class="previous"><br />&laquo; Request</a>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(s => s.RequestID)
        @Html.HiddenFor(s => s.Staff1, new { @Value = User.Identity.Name })
        @Html.HiddenFor(s => s.TimeStampStaff1)
        <table class="ActiveRequests">
            <caption>Log Water</caption>
            <tr>
                <th>@Html.Label("Customer Name")</th>
                <th>@Html.Label("Date")</th>
                <th>@Html.Label("Status")</th>
                <th>@Html.Label("CFS Requested")</th>
                <th>@Html.Label("CFS Given")</th>
                <th>@Html.Label("Comments")</th>
            </tr>
            <tr>
                <td>@Html.DisplayTextFor(s => s.CustomerName)</td>
                <td>@Html.TextBoxFor(s => s.StaffDate1, new { @type = "datetime-local"})</td>
                <td>@Html.DropDownListFor(s => s.RequestStatus1, ViewData["S"] as IEnumerable<SelectListItem>, "Select")</td>
                <td>@Html.DisplayTextFor(s => s.CustomerCFS1)</td>
                <td>@Html.TextBoxFor(s => s.StaffCFS1, new { @type = "number" })</td>
                <td>@Html.DropDownListFor(s => s.StaffComments1, ViewData["StaffComments2"] as IEnumerable<SelectListItem>, "Select")</td>
            </tr>
        </table>        
        <div>
            <button type="submit">Submit</button>
        </div>
    }
</body>
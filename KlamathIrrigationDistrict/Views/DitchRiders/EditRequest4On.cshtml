        </li>
        <li><a href="~/Account/Login">Log Out</a></li>
    </ul>
</header>
<body>
    <a href="Index4" class="previous"><br />&laquo; Request</a>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(s => s.RequestID)
        @Html.HiddenFor(s => s.Staff1, new { @Value = User.Identity.Name })
        @Html.HiddenFor(s => s.TimeStampStaff1)

        <div>
            @Html.Label("Customer Name: ")
            @Html.DisplayTextFor(s => s.CustomerName)
        </div>
        <div>
            @Html.Label("Date: ")
            @Html.TextBoxFor(s => s.StaffDate1, new { @type = "date"})
        </div>
        <div>
            @Html.Label("Status: ")
            @Html.TextBoxFor(m => m.RequestStatus1)
        </div>
        <div>
            @Html.Label("CFS: ")
            @Html.TextBoxFor(s => s.StaffCFS1, new { @type = "number" })
        </div>
        <div>
            @Html.Label("Comments: ")
            @Html.TextAreaFor(s => s.StaffComments1)
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    }
</body>